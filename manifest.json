{
  "manifest_version": 2,
  "name": "Plink",
  "description": "Plink is an app to help creators organize the things they make. It links emails, documents and websites by time, place and person.",
  "version": "0.0.1",
  "homepage_url": "https://www.plink.nyc",
  "browser_action": {
    "default_icon": "img/plink-favicon.png",
    "default_popup": "templates/popup.html",
    "default_title": "Plink"
  },
  "permissions": [
    "https://mail.google.com/",
    "https://inbox.google.com/",
    "https://www.plink.nyc/",
    "https://accounts.google.com/o/oauth2/token"
  ],
  "content_scripts" : [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": ["js/inboxsdk.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://www.google.com/robots.txt*"],
      "js": ["js/oauth.js"],
      "run_at": "document_start"
    }
  ]
}
