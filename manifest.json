{
  "manifest_version": 2,
  "name": "Plink",
  "description": "Plink is an app to help creators organize the things they make. It links emails, documents and websites by time, place and person.",
  "version": "0.0.1",
  "homepage_url": "https://www.plink.nyc",
  "icons": {
    "48": "img/plink-favicon.png"
  },
  "browser_action": {
    "default_icon": "img/plink-favicon.png",
    "default_popup": "popup.html",
    "default_title": "Plink"
  },
  "permissions": [
    "identity",
    "https://mail.google.com/",
    "https://inbox.google.com/",
    "https://www.plink.nyc/",
    "https://www.googleapis.com/auth/gmail.readonly",
    "https://www.googleapis.com/gmail"
  ],
  "oauth2": {
    "client_id":"755195619052-296e629meucrn3h5c9itfhk91fa796b8.apps.googleusercontent.com",
    "scopes": ["https://mail.google.com/", "https://www.googleapis.com/auth/gmail.readonly"]
  },
  "content_scripts" : [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://inbox.google.com/*"
      ],
      "js": ["js/inboxsdk.js"],
      "run_at": "document_end"
    }
  ]
}
